@{
    ViewBag.Title = "Novo Pedido";
    List<Business.Material> materiais = ViewBag.Materiais;
}

<div class="jumbotron">
    <h3>Novo Material</h3>
    <div>
        <a href="/Pedidos" class="btn btn-default">Voltar</a>
    </div>

    <form action="/Pedidos/Cadastrar" method="post">
        <div class="form-group">
            <label for="descricao">Material: </label>
        </div>

        <div class="form-group">
            <label for="valor_untario">Valor Unitário: </label>
        </div>

        <div class="form-group">
            <label for="un_medida">Un. Medida</label>
        </div>

        <div class="form-group">
            <label for="quantidade">Quantidade</label>
        </div>

        <div class="form-group">
            <label for="valor_total">Valor Total</label>
        </div>

        <button type="submit" class="btn btn-default">incluir</button>

        <div class="form-group">
