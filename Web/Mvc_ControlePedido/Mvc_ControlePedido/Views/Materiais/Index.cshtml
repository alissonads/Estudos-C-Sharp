@{
    ViewBag.Title = "Materiais";
    List<Business.Material> materiais = ViewBag.Materiais;
}

@if (TempData["sucesso"] != null)
{
    <div class="alert alert-success">@TempData["Sucesso"]</div>
}
@if (TempData["erro"] != null)
{
    <div class="alert alert-danger">@TempData["erro"]</div>
}

<div class="jumbotron">
    <h3>Materiais</h3>
    <div>
        <a href="/Materiais/Novo" class="btn btn-default">Novo Material</a>
    </div>

    <table class="table">
        <tr>
            <td>Código</td>
            <td>Descrição</td>
            <td>Un. Medida</td>
            <td>Valor Unitário</td>
        </tr>

        @foreach (var material in materiais)
        {
            <tr>
                <td>@material.Cd_material</td>
                <td>@material.Descricao</td>
                <td>@material.Unidade_medida</td>
                <td>@material.Valor_unitario</td>
                <td>
                    <a href="/Materiais/Editar/@material.Cd_material" class="btn btn-primary">Alterar</a>
                </td>
                <td>
                    <a href="/Materiais/Excluir/@material.Cd_material" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </table>
</div>